{
  "name": "Sherlocke",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Powered by IBM Watson",
  "homepage_url": "http://sherlocke.me",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ]
  },
  "options_page": "src/options/options.html",
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_title": "Sherlocke",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "storage",
    "history",
    "contextMenus",
    "https://www.canlii.org/*"
  ],
  "web_accessible_resources": [
    "/img/logo.png",
    "/fonts/OpenSans-Regular.ttf"
  ],
  "omnibox": {
    "keyword": "sherlocke"
  },
  "content_scripts": [ {
    "matches": [ "https://www.canlii.org/*" ],
    "css": ["src/inject/inject.css"],
    "js": ["/js/jquery/jquery.min.js",
           "/js/angular/angular.min.js",
           "/src/inject/inject.js"]
  } ]
}
